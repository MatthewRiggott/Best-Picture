<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>

<div class="container">
	<p class="large-text">Select five photos for your contest.</p>
	<% if @contest.photos.count == 4 %>
		<h2><%= link_to "Create contest", edit_contest_path(@contest) %></h2>
	<% end %>


		<%= form_for(@contest) do |f| %>

  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


	<div class="normalize">
		<% @photos.each do |photo| %>
			<%= image_tag(photo.url, class: "contest-image", id: photo.id) %>
		<% end %>
	</div>
</div>

